# AI Operating System Framework Environment Configuration
# Copy this file to .env and customize for your environment

# System Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Security
SECRET_KEY=your-secret-key-here
SESSION_TIMEOUT=3600

# Services
PROMPT_MEMORY_HOST=localhost
PROMPT_MEMORY_PORT=5000

# Database
DATABASE_URL=sqlite:///data/aimos.db

# External Services (Optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-west-2

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENDPOINT=http://localhost:9090

# Dashboard
DASHBOARD_PORT=3000
DASHBOARD_THEME=light

# CLI
CLI_AUTO_UPDATE=false
CLI_DEFAULT_COMMAND=status

# Agent Configuration
AGENT_TIMEOUT=300
AGENT_PARALLEL_EXECUTION=false
AGENT_AUTO_RESTART=true

# Reporting
REPORTS_RETENTION_DAYS=30
REPORTS_AUTO_CLEANUP=true

# Development (Only for development environment)
FLASK_ENV=development
FLASK_DEBUG=1
REACT_APP_API_URL=http://localhost:5000
